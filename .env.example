# ============================================
# MULTI-TENANT PLATFORM ENVIRONMENT VARIABLES
# ============================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Main Database
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/multitenant_db
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=multitenant_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres123
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# ============================================
# REDIS CONFIGURATION
# ============================================

REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_DECODE_RESPONSES=true

# ============================================
# RABBITMQ CONFIGURATION
# ============================================

RABBITMQ_URL=amqp://admin:admin123@rabbitmq:5672/
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/

# ============================================
# JWT & AUTHENTICATION
# ============================================

JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Settings (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# CELERY CONFIGURATION
# ============================================

CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# ============================================
# SERVICE URLS
# ============================================

# Internal Service URLs
AUTH_SERVICE_URL=http://auth-service:8001
TENANT_SERVICE_URL=http://tenant-service:8002
BUSINESS_SERVICE_URL=http://business-service:8003
API_GATEWAY_URL=http://api-gateway:8000

# External URLs
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000
PUBLIC_URL=http://localhost:3000

# ============================================
# EMAIL CONFIGURATION
# ============================================

EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
EMAIL_FROM_NAME=MultiTenant Platform
EMAIL_FROM_ADDRESS=noreply@multitenant.com

# SendGrid (Alternative)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# ============================================
# STORAGE CONFIGURATION
# ============================================

# Local Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/app/storage

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=multitenant-storage
S3_ENDPOINT_URL=
S3_USE_SSL=true
S3_VERIFY_SSL=true

# Azure Blob Storage (Alternative)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=

# ============================================
# PAYMENT & BILLING
# ============================================

# Stripe
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_FREE=
STRIPE_PRICE_ID_STARTER=
STRIPE_PRICE_ID_PROFESSIONAL=
STRIPE_PRICE_ID_ENTERPRISE=

# PayPal (Alternative)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ============================================
# MONITORING & OBSERVABILITY
# ============================================

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# DataDog
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_HOST=

# New Relic
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=multitenant-platform

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================
# SECURITY CONFIGURATION
# ============================================

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-ID,X-Request-ID

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_BURST=10
RATE_LIMIT_PER_TENANT=1000/hour

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-chars-long
FIELD_ENCRYPTION_KEY=another-encryption-key-32-chars

# ============================================
# TENANT CONFIGURATION
# ============================================

# Default Tenant Settings
DEFAULT_TENANT_PLAN=free
DEFAULT_TRIAL_DAYS=14
DEFAULT_MAX_USERS_FREE=5
DEFAULT_MAX_USERS_STARTER=50
DEFAULT_MAX_USERS_PROFESSIONAL=200
DEFAULT_MAX_USERS_ENTERPRISE=99999
DEFAULT_MAX_STORAGE_GB_FREE=10
DEFAULT_MAX_STORAGE_GB_STARTER=100
DEFAULT_MAX_STORAGE_GB_PROFESSIONAL=500
DEFAULT_MAX_STORAGE_GB_ENTERPRISE=99999

# Tenant Isolation
TENANT_ISOLATION_MODE=schema
ENABLE_ROW_LEVEL_SECURITY=true
TENANT_SCHEMA_PREFIX=tenant_

# ============================================
# FEATURE FLAGS
# ============================================

FEATURE_DARK_MODE=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_API_V2=false
FEATURE_BULK_OPERATIONS=true
FEATURE_EXPORT_DATA=true
FEATURE_WEBHOOKS=false
FEATURE_CUSTOM_BRANDING=false
FEATURE_SSO_INTEGRATION=false
FEATURE_TWO_FACTOR_AUTH=true

# ============================================
# API CONFIGURATION
# ============================================

API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_MAX_REQUEST_SIZE=10485760  # 10MB
API_REQUEST_TIMEOUT=30

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================
# CACHE CONFIGURATION
# ============================================

CACHE_ENABLED=true
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=multitenant
CACHE_TENANT_INFO_TIMEOUT=3600
CACHE_USER_SESSION_TIMEOUT=1800
CACHE_FEATURE_FLAGS_TIMEOUT=600

# ============================================
# BACKGROUND JOBS
# ============================================

# Job Queues
JOB_QUEUE_HIGH_PRIORITY=high
JOB_QUEUE_DEFAULT=default
JOB_QUEUE_LOW_PRIORITY=low

# Job Timeouts
JOB_DEFAULT_TIMEOUT=300
JOB_MAX_RETRIES=3
JOB_RETRY_DELAY=60

# Scheduled Jobs
ENABLE_SCHEDULED_JOBS=true
CLEANUP_OLD_SESSIONS_CRON=0 2 * * *
BACKUP_DATABASE_CRON=0 3 * * *
GENERATE_REPORTS_CRON=0 6 * * 1

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOG_FORMAT=json
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOG_FILE_PATH=/var/log/multitenant
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_FILE_BACKUP_COUNT=5
LOG_TO_STDOUT=true
LOG_TO_FILE=false

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Hot Reload
HOT_RELOAD=true
WEBPACK_DEV_SERVER_PORT=3000

# Mock Services
USE_MOCK_EMAIL=true
USE_MOCK_PAYMENT=true
USE_MOCK_STORAGE=true

# Debug
SQL_ECHO=false
SHOW_STACK_TRACES=true
PROFILE_REQUESTS=false

# ============================================
# TESTING CONFIGURATION
# ============================================

TEST_DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/multitenant_test_db
TEST_REDIS_URL=redis://redis:6379/1
TEST_CREATE_SAMPLE_DATA=true
TEST_CLEANUP_AFTER_RUN=true

# ============================================
# FRONTEND CONFIGURATION
# ============================================

REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_ENABLE_SENTRY=false
REACT_APP_SENTRY_DSN=
REACT_APP_MAP_API_KEY=
REACT_APP_TENANT_MODE=subdomain  # subdomain or path

# ============================================
# NGINX CONFIGURATION
# ============================================

NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=10m
NGINX_KEEPALIVE_TIMEOUT=65
NGINX_GZIP=on
NGINX_GZIP_TYPES=text/plain application/json application/javascript text/css

# ============================================
# DOCKER CONFIGURATION
# ============================================

DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_PREFIX=multitenant
DOCKER_IMAGE_TAG=latest
DOCKER_BUILD_ARGS=
COMPOSE_PROJECT_NAME=multitenant-platform

# ============================================
# KUBERNETES CONFIGURATION
# ============================================

K8S_NAMESPACE=multitenant
K8S_CLUSTER_NAME=multitenant-cluster
K8S_INGRESS_CLASS=nginx
K8S_CERT_MANAGER_EMAIL=admin@multitenant.com
K8S_STORAGE_CLASS=standard
K8S_REPLICAS_MIN=2
K8S_REPLICAS_MAX=10
